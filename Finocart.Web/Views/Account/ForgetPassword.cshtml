        var CheckIfEmailIdExists = '@Url.Action("CheckIfEmailIdExists", "Common")'
    </script>
</head>

@using (Html.BeginForm("SendForgetPasswordMail", "Account", FormMethod.Post, new { enctype = "multipart/form-data", id = "FormSubmitLogin" }))
{
    @Html.AntiForgeryToken()
    <div class="main-inner-section">
        <div class="content-upper-section">
            <div class="right-box" id="rightbox">

                @*<form>*@
                    <div class="row">
                        <div class="col-xs-12 col-sm-12">
                            <h2>Forgot Password</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.RoleName)

                            @Html.TextBox("EmailID", Model.EmailID, new { @class = "form-control", placeholder = "Email ID" })

                            <label class="log-valid" id="lblOldPasswordError" class="error" style="color:red;display: none;">Old Password cannot be empty</label>
                            <label class="log-valid" id="lblWrongPasswordError" class="error" style="color:red;">@TempData["WrongPassword"]</label>
                            <label class="log-valid" id="lblEmailError" class="error" style="color:red;display: none;">Email cannot be empty</label>
                            <label class="log-valid" id="lblEmailInvalidError" class="error" style="color:red;display: none;">Enter proper email id</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5 col-sm-2">
                            <button id="btnSave" class="submit-btn" type="submit">Submit</button>
                        </div>
                    </div>
                @*</form>*@
            </div>
        </div>
    </div>
}

