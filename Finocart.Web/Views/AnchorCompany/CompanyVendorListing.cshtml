@model Finocart.CustomModel.VendorlistModel
@{
    ViewData["Title"] = "Anchor Company Vendors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AnchorCompany/CompanyVendorListing.js"></script>
<style>
    .modal-dialog {
        width: 600px;
        margin: 30px auto;
    }

    .upload {
        float: none;
    }

    .dowte {
        margin: 5px 0;
    }
</style>
<script>
    var GetVendorListing = '@Url.Action("GetCompanyVendorListing", "AnchorCompany")';
    var GetLog = '@Url.Action("GetLog", "AnchorCompany")';
    var GetCompanyBank = '@Url.Action("GetCompanyBankViewList", "AnchorCompany")';
    function BackBtn() {
        history.back();
    }
</script>
<div class="main-inner-section">
    <div class="content-upper-section" id="AnchorCompany">

        <div class="tabsec-main">
            <ul class="nav nav-pills">
                <li class="active"><a data-toggle="pill" href="#eInvoices" id="liElgibleInvoice" style="width: 150px;text-align:center;">Vendor Company</a></li>
                <li><a data-toggle="pill" href="#dInvoices" style="width: 150px;text-align:center;">Bank</a></li>
            </ul>
            <div class="tab-content">
                <div id="eInvoices" class="tab-pane fade in active">
                    <div class="row" id="eAnchorCompInvoices">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="search-box-main clearfix">
                                <h4 style="font-size:15px;font-weight:bold;">Vendor Company Details</h4>
                                <div class="col-xs-12 col-sm-3 col-md-3 padding">
                                    @Html.TextBox("txt_Search", null, new { placeholder = "Search by Anchor Company Name", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3 padding">
                                    @Html.TextBox("txt_TotalApprovedINV", null, new { placeholder = "Search by Total Invoice Amount", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6 padding">
                                    <button id="ExportAnchCompCSV" class="excelbutton">
                                        <img src="~/Content/images/excelicon.png" title="Download Excel File" class="img-responsive" style="display: inline;" />
                                    </button>
                                    <button class="cancel-btn" type="button" style="float:right;margin-right: 15px;border-radius:0;" onclick="BackBtn()">Back</button>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="main-table-box page-scroll">
                                <div class="table-responsive">
                                    <input type="hidden" id="hdnCompanyID" value="@Model.CompanyID" />
                                    <input type="hidden" id="hdnCompanyName1" value="@Model.Company_name" />
                                    <div class="col-xs-12">
                                        <div class="compname">
                                            <label>Company Name: </label>
                                            <label id="lblcompanyName1"></label>
                                        </div>
                                    </div>
                                    <table id="tbl_CompanyVendorList" class="table table-responsive table-hover table-bordered tbl_UserList">
                                        <thead>
                                            <tr>
                                                @*<th>Anchor Company</th>*@
                                                <th hidden>Vendor ID</th>
                                                <th>Vendor Company</th>
                                                <th>Contact No.</th>
                                                <th>Email ID</th>
                                                <th>Maximum Limit</th>
                                                <th>Vendor Status</th>
                                                <th>Date of Creation</th>

                                                @*<th style="width:10%">Actions</th>*@
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <div id="dInvoices" class="tab-pane fade">
                    <div class="row" id="eAnchorCompInvoices">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="search-box-main clearfix">
                                <h4 style="font-size:15px;font-weight:bold;">Bank Details</h4>
                                <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                    @Html.TextBox("txt_CompanyNameSearch", null, new { placeholder = "Search", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>

                                </div>

                                <div class="col-xs-12 col-sm-8 col-md-8 padding">
                                    <button id="ExportAnchCompCSV" class="excelbutton" style="margin-right:0;">
                                        <img src="~/Content/images/excelicon.png" title="Download Excel File" class="img-responsive" style="display: inline;float: left;margin-left: 4px;" />
                                    </button>
                                    <button class="cancel-btn" type="button" onclick="BackBtn()" style="float:right;margin-right: 15px;border-radius:0;">Back</button>
                                    @*<button id="btnComapnyFilter" class="filterbtn">
            <img src="~/Content/images/filtericon.png" title="Filter" class="img-responsive" />
        </button>*@
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="main-table-box page-scroll">
                                <div class="table-responsive">
                                    <input type="hidden" id="hdnCompanyID" value="@Model.CompanyID" />
                                    <table id="tbl_CompanyBankViewList" class="table table-responsive table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Company Names</th>
                                                <th>Bank Name</th>
                                                <th>Available Limits (INR)</th>
                                                <th>Interest</th>
                                                <th>Draw Funds (INR)</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>