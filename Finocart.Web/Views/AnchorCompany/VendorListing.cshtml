
@{
    ViewData["Title"] = "Available For Funding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AnchorCompany/VendorListing.js"></script>
<style>
    .modal-dialog {
        width: 600px;
        margin: 30px auto;
    }

    .upload {
        float: none;
    }

    .dowte {
        margin: 5px 0;
    }
</style>
<script>
    var GetVendorListing = '@Url.Action("GetVendorListing", "AnchorCompany")';
    var GetLog = '@Url.Action("GetLog", "AnchorCompany")';
</script>
<div class="main-inner-section">
    <div class="content-upper-section" id="AnchorCompany">
        <div class="tabsec-main">
            <div class="tab-content">
                <div class="row" id="eAnchorCompInvoices">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="search-box-main clearfix">
                            <h4 style="font-size:15px;font-weight:bold;">Vendor</h4>
                            <div class="col-xs-12 col-sm-3 col-md-3 padding">
                                @Html.TextBox("txt_CompanyName", null, new { placeholder = "Search by Vendor Name", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>
                            </div>
                            
                            <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                <input type="file" id="fUpload" name="files" class="uploadint" style="display: inline;height: 40px;" />
                                <input class="upload" type="button" id="btnUpload" value="Upload Vendor" />
                                <a href="#" id="ExcelVendorTemplate" class="dowte">Download Template</a>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                <input type="file" id="fUploadInv" name="files" class="uploadint" style="display: inline;height: 40px;" />
                                <input class="upload" type="button" id="btnUploadInv" value="Upload Invoice" />
                                <a href="#" class="dowte" onclick='InvoiceExcelTemplate()'>Download Template</a>
                            </div>
                            <div class="col-xs-12 col-sm-1 col-md-1 padding">
                                <button id="ExportAnchCompCSV" class="excelbutton" style="margin-right:0;">
                                    <img src="~/Content/images/excelicon.png" title="Download Excel File" class="img-responsive" style="display: inline;" />
                                </button>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="main-table-box page-scroll">
                            <div class="table-responsive">
                                <input type="hidden" id="companyID" />
                                <input type="hidden" id="companyInvoicesID" />
                                <table id="tbl_VendorList" class="table table-responsive table-hover table-bordered tbl_UserList">
                                    <thead>
                                        <tr>
                                            <th hidden>Vendor ID</th>
                                            <th>Vendor Company</th>
                                            <th>Contact No.</th>
                                            <th>Email ID</th>
                                            @*<th>Maximum Limit</th>*@
                                            @*<th>Vendor Status</th>*@
                                            @*<th>InvAmtLimitStatusValues</th>*@
                                            <th>Date of Creation</th>
                                            <th style="width:10%">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>



            </div>
        </div>
    </div>
</div>