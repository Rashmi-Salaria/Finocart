@{
    ViewData["Title"] = "PaymentDueToday";
}

<script src="~/AnchorCompany/PaymentDueToday.js"></script>
<script>
    var GetPaymentDueTodayList = '@Url.Action("GetPaymentDueTodayList", "AnchorCompDashboard")';
</script>
<style>
    .modal-dialog {
        width: 600px;
        margin: 30px auto;
    }
</style>
<div class="main-inner-section">
    <div class="content-upper-section">
        <div class="tabsec-main">
            <div class="tab-content">
                <div id="eInvoices" class="tab-pane fade in active">
                    <div class="row" id="eAnchorCompInvoices">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="search-box-main clearfix">
                                <h4 style="font-size:15px;font-weight:bold;">Payable Due Today</h4>
                                <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                    @Html.TextBox("txt_VendorName", null, new { placeholder = "Search by Vendor Name", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>
                                </div>
                                <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                    @Html.TextBox("txt_TotalInvoiceAmt", null, new { placeholder = "Search by Total Invoice Amount", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>
                                </div>

                                <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                    <button id="ExportAnchCompCSV" class="excelbutton" style="margin-right:0;">
                                        <img src="~/Content/images/excelicon.png" title="Download Excel File" class="img-responsive" style="display: inline;" />
                                    </button>

                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="main-table-box page-scroll">
                                <div class="table-responsive">
                                    <table id="tbl_VendorPaymentDueList" class="table table-responsive table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th hidden>Vendor ID</th>
                                                <th>Vendor Name</th>
                                                <th>Number of Discount Approved Invoices</th>
                                                <th>Total Invoice Amount(INR)</th>
                                                <th>Total Approved Amount(INR)</th>
                                                <th>Amount Due for Payment  Today(INR)</th>
                                                <th>Earning(INR)</th>
                                                <th style="width:10%">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-xs-12 footer-btn">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12">
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-4 padding">
                                                <label class="footer-label">Total Number of Approved Invoices: <span id="lblapprovedinvices"></span></label>
                                            </div>
                                            <div class="col-xs-12 col-sm-4 padding">
                                                <label class="footer-label">Total Approved Amount (INR) : <span id="lblapprovedamount"></span></label>
                                            </div>
                                            <div class="col-xs-12 col-sm-4 padding">
                                                <label class="footer-label">Total  Amount Payable Today (INR): <span id="lblamountpayabletoday"></span></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    </div>
</div>
