@model Finocart.CustomModel.VendorPaymentDueViewModel
@{
    ViewData["Title"] = "PaymentDueTodayView";
}

<script src="~/AnchorCompany/PaymentDueTodayView.js"></script>
<script>
    var GetPaymentDueTodayViewList = '@Url.Action("GetPaymentDueTodayViewList", "AnchorCompDashboard")';
</script>
<style>
    .modal-dialog {
        width: 600px;
        margin: 30px auto;
    }
</style>
<div class="main-inner-section">
    <div class="content-upper-section">
        <div class="tabsec-main">
            <div class="tab-content">
                <div id="eInvoices" class="tab-pane fade in active">
                    <div class="row" id="eAnchorCompInvoices">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="search-box-main clearfix">
                                <h4 style="font-size:15px;font-weight:bold;">Payable Due Today</h4>
                                <div class="col-xs-12 col-sm-1 col-md-1 padding">
                                    <a class="backbtn" onclick="BackBtn()"><i class="fas fa-long-arrow-alt-left" title="Go Back"></i></a>
                                </div>
                                <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                    @Html.TextBox("txt_InvoiceID", null, new { placeholder = "Search by Invoice ID", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>
                                </div>
                                <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                    @Html.TextBox("txt_InvoiceAmt", null, new { placeholder = "Search by Invoice Amount", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>
                                </div>

                                <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                    <button id="ExportAnchCompCSV" class="excelbutton" style="margin-right:0;">
                                        <img src="~/Content/images/excelicon.png" title="Download Excel File" class="img-responsive" style="display: inline;" />
                                    </button>
                                    <button id="btnInvoiceFilter" class="filterbtn">
                                        <img src="~/Content/images/filtericon.png" title="Filter" class="img-responsive" />
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="main-table-box page-scroll">
                                <div class="table-responsive">
                                    @Html.HiddenFor(m => m.VendorID)
                                    <table id="tbl_VendorPaymentDueListView" class="table table-responsive table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th>PO ID</th>
                                                <th>Invoice ID</th>
                                                <th>Invoice Date</th>
                                                <th>Invoice Amount(INR)</th>
                                                <th>Approved Amount(INR)</th>
                                                <th>Earning(INR)</th>
                                                <th>Net Payable Amount(INR)</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
