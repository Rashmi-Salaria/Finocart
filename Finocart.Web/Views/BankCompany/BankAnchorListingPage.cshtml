@{
    ViewData["Title"] = "BankAnchorList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/BankCompany/BankAnchorListingPage.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<script>
    var GetBankAnchorListata = '@Url.Action("GetBankAnchorListata", "BankCompany")';
</script>
<div class="main-inner-section">
    <div class="content-upper-section">
        <div class="tabsec-main">
            <div class="tab-content">
                <div id="eInvoices" class="tab-pane fade in active">
                    <div class="row" id="eAnchorCompInvoices">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="search-box-main clearfix">              
                                <h4 style="font-size:15px;font-weight:bold;">NEW ANCHOR</h4>
                                <div class="col-xs-12 col-sm-4 col-md-4 padding">
                                    @Html.TextBox("txt_AnchorNameSearch", null, new { placeholder = "Search by Anchor Name", @class = "searchTerm" })<span class="searchButton"><img src="~/Content/images/searchicon.png" class="img-responsive" style="display: inline;" /></span>
                                </div>

                                <div class="col-xs-12 col-sm-8 col-md-8 padding">
                                    <button id="ExportAnchCompCSV" class="excelbutton" style="margin-right:0;">
                                        <img src="~/Content/images/excelicon.png" title="Download Excel File" class="img-responsive" style="display: inline;" />
                                    </button>

                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="main-table-box page-scroll">
                                <div class="table-responsive">
                                    <table id="tbl_BankAnchorList" class="table table-responsive table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th hidden>ID</th>
                                                <th>Anchor Name</th>
                                                <th>Contact Name</th>
                                                <th>Anchor Email</th>
                                                <th>Contact Number</th>
                                                @*<th>Available Limits (INR)</th>
                                                <th>Utilized Limits (INR)</th>
                                                <th>Interest Rate (% P.A.)</th>
                                                <th>Validity From Date</th>
                                                <th>Validity Upto</th>*@
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>

</div>


